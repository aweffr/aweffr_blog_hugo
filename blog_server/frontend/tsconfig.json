{
	"compilerOptions": {
		"rootDir": "src",
		"target": "esnext",
		"skipLibCheck": true,
		"outDir": "./dist/",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react",
		"baseUrl": "./src",
		"lib": [
			"es2015",
			"dom.iterable",
			"es2016.array.include",
			"es2017.object",
			"dom"
		],
		"module": "es6",
		"removeComments": true,
		"alwaysStrict": true,
		"allowUnreachableCode": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"include": [
			"src/*.ts",
			"src/*.tsx",
			"src/*.js",
			"src/*.jsx"
		],
		"exclude": ["node_modules", "dist"]
	},
}
